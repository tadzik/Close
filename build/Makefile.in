## $Id$

## arguments we want to run parrot with
PARROT_ARGS   :=

## configuration settings
VERSION       := @versiondir@
BIN_DIR       := @bindir@
LIB_DIR       := @libdir@$(VERSION)
DOC_DIR       := @docdir@$(VERSION)
MANDIR        := @mandir@$(VERSION)

# Set up extensions
LOAD_EXT      := @load_ext@
O             := @o@

# Various paths
PERL6GRAMMAR  := $(LIB_DIR)/library/PGE/Perl6Grammar.pbc
#PERL6GRAMMAR  := ../../runtime/parrot/library/PGE/Perl6Grammar.pbc

NQP           := $(LIB_DIR)/languages/nqp/nqp.pbc
#NQP           := ../../compilers/nqp/nqp.pbc
PCT           := $(LIB_DIR)/library/PCT.pbc
#PCT           := ../../runtime/parrot/library/PCT.pbc
PMC_DIR       := src/pmc
OPS_DIR       := src/ops

## Setup some commands
MAKE          := @make_c@
PERL          := @perl@
CAT           := @cat@
CHMOD         := @chmod@
CP            := @cp@
MKPATH        := @mkpath@
RM_F          := @rm_f@
RM_RF         := @rm_rf@
POD2MAN       := pod2man
#IF(parrot_is_shared and not(cygwin or win32)):export LD_RUN_PATH := @blib_dir@:$(LD_RUN_PATH)
PARROT        := $(BIN_DIR)/parrot@exe@
PBC_TO_EXE    := $(BIN_DIR)/pbc_to_exe@exe@
#IF(darwin):
#IF(darwin):# MACOSX_DEPLOYMENT_TARGET must be defined for OS X compilation/linking
#IF(darwin):export MACOSX_DEPLOYMENT_TARGET := @osx_version@

CLOSE_GROUP := $(PMC_DIR)/close_group$(LOAD_EXT)
CLOSE_OPS := $(OPS_DIR)/close_ops$(LOAD_EXT)
CLOSE_LIB_PIR := library/close/close_lib.pir
CLOSE_LIB_PBC := library/close/close_lib.pbc

#PMC_DEPS := build/src/pmc/Makefile.in $(PMC_DIR)/close.pmc
#OPS_DEPS := build/src/ops/Makefile.in $(OPS_DIR)/close.ops

SOURCES := \
  src/gen_grammar.pir \
  src/gen_actions.pir \
  src/gen_builtins.pir \
  close.pir

GRAMMARS_PG := \
	src/parser/grammar.pg \
	src/parser/expressions.pg \
	src/parser/statements.pg \
	src/parser/builtins.pg

ACTIONS_PM := \
	src/parser/actions.pm \
	src/parser/builtin_actions.pm \
	src/parser/expression_actions.pm

BUILTINS_PIR := \
  src/builtins/literals.pir \
  src/builtins/optable.pir \
  src/builtins/say.pir \
  src/builtins/strings.pir

LIBRARY_SRC := \
	library/close/load.cl \
	library/close/print.cl \
	library/close/ok.cl \
	library/close/string.cl

DOCS := README

BUILD_CLEANUPS := \
  close.pbc \
  "src/gen_*.pir" \
  src/gen_actions.pm \
  "*.c" \
  "*$(O)" \
  close@exe@ \
#IF(win32):  parrot-close.exe \
#IF(win32):  parrot-close.iss \
#IF(win32):  "setup-parrot-*.exe" \
  installable_close@exe@

TEST_CLEANUPS :=

# the default target
build: \
  $(CLOSE_OPS) \
  $(CLOSE_GROUP) \
  close.pbc \
  $(CLOSE_LIB_PBC)

all: build close@exe@ installable

close.pbc: $(SOURCES)
	$(PARROT) $(PARROT_ARGS) -o close.pbc close.pir

close@exe@: close.pbc
	$(PBC_TO_EXE) close.pbc

src/gen_grammar.pg: $(GRAMMARS_PG)
	cat $(GRAMMARS_PG) > src/gen_grammar.pg

src/gen_grammar.pir: $(PERL6GRAMMAR) src/gen_grammar.pg
	$(PARROT) $(PARROT_ARGS) $(PERL6GRAMMAR) \
	    --output=src/gen_grammar.pir \
	    src/gen_grammar.pg

#   src/parser/grammar-oper.pg

src/gen_actions.pm: $(ACTIONS_PM)
	cat $(ACTIONS_PM) > src/gen_actions.pm

src/gen_actions.pir: $(NQP) src/gen_actions.pm
	$(PARROT) $(PARROT_ARGS) $(NQP) --output=src/gen_actions.pir \
	    --target=pir src/gen_actions.pm

src/gen_builtins.pir: $(BUILTINS_PIR)
	$(CAT) $(BUILTINS_PIR) > src/gen_builtins.pir

$(CLOSE_GROUP): $(PMC_DEPS)
#	$(MAKE) $(PMC_DIR)

$(CLOSE_OPS): $(OPS_DEPS)
#	$(MAKE) $(OPS_DIR)

$(CLOSE_LIB_PIR): $(LIBRARY_SRC)
	parrot -r close.pbc --combine --target=pir --output=$(CLOSE_LIB_PIR) \
		$(LIBRARY_SRC)

$(CLOSE_LIB_PBC): $(CLOSE_LIB_PIR)
	parrot --output=$(CLOSE_LIB_PBC) $(CLOSE_LIB_PIR)

installable: installable_close@exe@

installable_close@exe@: close.pbc
	$(PBC_TO_EXE) close.pbc --install

Makefile: build/Makefile.in
	$(PERL) Configure.pl

