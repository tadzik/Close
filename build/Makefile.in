%.pir  : %.pira
	@echo "* Stripping annotations from $<"
	@$(STRIP_PIRA) $< > $@

%.pira : %.c\=
	cl --target=pir --output=$@ $<

%.pira : %.pg
	@echo "* Compiling $< to PIR"
	@$(PARROT) $(PARROT_ARGS) $(PERL6GRAMMAR) --output=$@ $<
	
all: build close@exe@ installable

close.pbc: $(SOURCES)
	$(PARROT) $(PARROT_ARGS) -o close.pbc close.pir

close@exe@: close.pbc
	$(PBC_TO_EXE) close.pbc

src/gen_actions.pir: src/gen_actions.pm
	@echo "**** Compiling gen_actions.pm to PIR"
	$(PARROT) $(PARROT_ARGS) $(NQP) --target=pir	\
		--output=src/gen_actions.pira			\
		src/gen_actions.pm
	$(STRIP_PIRA) src/gen_actions.pira			\
		> src/gen_actions.pir
	
src/gen_actions.pm: $(ACTIONS_PM) Makefile
	@echo "**** Collecting gen_actions.pm"
	cat $(ACTIONS_PM) > src/gen_actions.pm

src/gen_builtins.pir: $(BUILTINS_PIR)
	@echo "**** Collecting gen_builtins.pir"
	$(CAT) $(BUILTINS_PIR) > src/gen_builtins.pir

src/gen_grammar.pg: $(GRAMMARS_PG) Makefile
	@echo "**** Collecting gen_grammar.pg"
	@cat $(GRAMMARS_PG) > src/gen_grammar.pg

src/gen_grammar.pir: src/gen_grammar.pg
	@echo "**** Compiling gen_grammar.pg to PIR"
	$(PARROT) $(PARROT_ARGS) $(PERL6GRAMMAR) \
		--output=src/gen_grammar.pira  \
		src/gen_grammar.pg
	$(STRIP_PIRA) src/gen_grammar.pira \
		> src/gen_grammar.pir
	
src/gen_library.pir: $(COMPILER_LIBS_PIR) Makefile
	@echo "* Assembling gen_library.pir"
	@cat $(COMPILER_LIBS_PIR) > src/gen_library.pir

